                withKubeCredentials(kubectlCredentials: [[caCertificate: '', clusterName: 'EKS-1', contextName: '', credentialsId: 'k8s-token', namespace: 'webapps', serverUrl: 'https://5682FF5202BAFE565A18AA1C329EEE7D.gr7.ap-south-1.eks.amazonaws.com']]) {
